<style>
    nav .active {
        background-color: aqua;
        font-weight: bold;
        font-size: 1.4rem;
    }
</style>

<nav class="
          flex flex-wrap
          items-center
          justify-between
          w-full
          py-4
          md:py-0
          px-4
          text-lg text-gray-700
          bg-white
        ">
    <div style="text-shadow:1px 1px 3px green ,-3px 3px 6px purple ;"
        class="text-4xl font-bold text-white brightness-200 ">
        <%= _ORG_NAME %>
    </div>
    <button id="nav-menu-handler-button" class="text-[1.72rem] hover:text-purple-400 inline md:hidden"><i
            class="fa-solid fa-bars"></i></button>


    <div class="hidden w-full md:flex md:items-center md:w-auto" id="nav-menu">
        <ul class="pt-4 text-base text-gray-700 md:flex md:justify-between md:pt-0">
            <li id="nav-item-home">
                <a class="md:p-4 py-2 block hover:text-purple-400" href="/">home</a>
            </li>
            <li id="nav-item-contact">
                <a class="md:p-4 py-2 block hover:text-purple-400" href="/contact">contact</a>
            </li>
            <li id="nav-item-notice">
                <a class="md:p-4 py-2 block hover:text-purple-400" href="/notice">notice</a>
            </li>
            <li id="nav-item-about">
                <a class="md:p-4 py-2 block hover:text-purple-400" href="/about">about</a>
            </li>
            <% try{ %>
                <% if(_admin===true){ %>
                    <li id="nav-item-about">
                        <a class="md:p-4 py-2 block hover:text-purple-400" href="/loaout">Loaout</a>
                    </li>
                    <% } %>
                        <% }catch(error){console.log(error)} %>

        </ul>
    </div>
</nav>


<script>
    const button = document.querySelector('#nav-menu-handler-button');
    const menu = document.querySelector('#nav-menu');

    //<i class="fa-solid fa-circle-xmark"></i>
    button.addEventListener('click', () => {
        menu.classList.toggle('hidden');
        button.children[0].classList.toggle('fa-circle-xmark')
        button.children[0].classList.toggle('fa-bars')
    });
</script>
